<% content_for(:main_container_class, 'container_tiny') %>

<div class='page_header'>
  <h2><%= t('sign_in') %></h2>
</div>

<p>Don't have an account? Sign up as a <a href='<%= new_user_registration_path(type: 'vendor') %>'>vendor</a> or a <a href='<%= new_user_registration_path(type: 'staff') %>'>government employee</a>.</p>

<%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
  <%= f.input :email, required: false, autofocus: true %>
  <%= f.input :password, required: false %>
  <%= f.input :remember_me, as: :boolean, label: false, inline_label: 'Keep me logged in for 2 weeks' %>

  <%= f.button :submit, t('sign_in'), class: 'primary' %>
<% end %>

<%= render "users/shared/links" %>

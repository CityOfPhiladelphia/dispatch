<!doctype html>
<html>
<head>
  <title><%= message.subject %></title>
  <meta name='viewport' content='width=device-width' />
  <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />
  <%= stylesheet_link_tag 'mailer', media: 'all' %>
</head>
<body>
  <table class='body-wrap'>
    <tr>
      <td></td>
      <td class='header_container'>
        <h1 class='site_name'>Beacon</h1>
      </td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td class='container'>
        <div class='content'>
          <table>
            <tr>
              <td>
                <%= yield %>
              </td>
            </tr>
          </table>
        </div>
      </td>
      <td></td>
    </tr>
  </table>

  <table class='footer-wrap'>
    <tr>
      <td>
      <td class='container'>
        <div class='content'>
          <table>
            <tr>
              <td align='center'>
                This email was sent by Beacon.
              </td>
            </tr>
          </table>
        </div>
      <td></td>
    </tr>
  </table>
</body>
</html>

<% content_for(:page_title, @opportunity.title) %>

<% if !@opportunity.posted? %>
  <%= render('admin_status') %>
<% end %>

<div class='page_header'>
  <h2><%= @opportunity.title %></h2>

  <% if @opportunity.posted? %>
    <%= render('subscribe_button') %>
  <% end %>
</div>

<div class='grid'>
  <div class='item lap_eight_columns'>
    <%= render('description') %>
    <%= render('attachments') %>
    <%= render('questions') if @opportunity.enable_questions? %>
  </div>
  <div class='item lap_four_columns'>
    <%= render('timeline') %>
    <%= render('actions') %>
    <%= render('admin_links') %>
  </div>
</div>
